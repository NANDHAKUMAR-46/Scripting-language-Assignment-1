<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Four-Digit Number Validator</title>
    <script>
        function validateNumber() {
            let num = document.getElementById("number").value;
            if(!/^\d{4}$/.test(num)) { alert("Enter exactly 4 digits!"); return; }
            if(num[0] === '0') { alert("First digit cannot be zero!"); return; }
            for(let i = 0; i < 3; i++) {
                if(num[i] >= num[i+1]) { alert("Digits must be ascending!"); return; }
            }
            alert("Valid number!");
        }
    </script>
</head>
<body>
    <h2>Four-Digit Number Validator</h2>
    <input type="text" id="number" maxlength="4" placeholder="Enter 4-digit number">
    <button onclick="validateNumber()">Validate</button>
</body>
</html>
